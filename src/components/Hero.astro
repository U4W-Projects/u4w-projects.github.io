---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="hero">
    <div class="container">
        <div class="hero-tagline">U4W</div>
        <div class="hero-divider"></div>
        <h1>UNIVERSE <span class="hero-highlight">IV</span> WORKSTATION</h1>
        <div class="hero-subtitle">
            <p>{t("hero.subtitle.1")}</p>
            <p>心は定まり、志は遠く</p>
            <p>心定志遠</p>
        </div>
        <p class="mission-statement">
            {t("hero.mission")}
        </p>
        <a href="#join" class="cta-button"
            >{t("hero.cta")} <i class="fas fa-arrow-right"></i></a
        >
    </div>
</section>

<style>
    .hero {
        padding: 180px 0 120px;
        text-align: center;
        position: relative;
        background: linear-gradient(
            to bottom,
            var(--bg-primary) 0%,
            var(--bg-secondary) 100%
        );
        transition: background var(--transition-speed);
    }

    .hero-divider {
        width: 100px;
        height: 4px;
        background: linear-gradient(
            to right,
            var(--primary-color),
            var(--accent-2)
        );
        margin: 0 auto 40px;
        border-radius: 2px;
        transition: background var(--transition-speed);
    }

    .hero-tagline {
        display: inline-block;
        background-color: rgba(30, 41, 59, 0.7);
        color: var(--primary-color);
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 30px;
        letter-spacing: 1px;
        border: 1px solid rgba(59, 130, 246, 0.2);
        backdrop-filter: blur(5px);
        transition: all var(--transition-speed);
    }

    :global(.light-mode) .hero-tagline {
        background-color: rgba(245, 245, 245, 0.9);
    }

    h1 {
        font-size: 3.5rem;
        color: var(--text-primary);
        margin-bottom: 20px;
        line-height: 1.2;
        font-weight: 800;
        transition: color var(--transition-speed);
    }

    .hero-highlight {
        color: var(--primary-color);
        position: relative;
        display: inline-block;
    }

    .hero-highlight::after {
        content: "";
        position: absolute;
        bottom: 5px;
        left: 0;
        width: 100%;
        height: 8px;
        background-color: rgba(59, 130, 246, 0.2);
        z-index: -1;
        border-radius: 2px;
        transition: background-color var(--transition-speed);
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: var(--accent-2);
        margin-bottom: 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 400;
        transition: color var(--transition-speed);
    }

    .mission-statement {
        font-size: 1.15rem;
        max-width: 700px;
        margin: 0 auto 50px;
        color: var(--text-secondary);
        line-height: 1.8;
        background-color: rgba(30, 41, 59, 0.5);
        padding: 30px;
        border-radius: 12px;
        border-left: 4px solid var(--primary-color);
        backdrop-filter: blur(5px);
        border: 1px solid var(--border-color);
        transition: all var(--transition-speed);
    }

    :global(.light-mode) .mission-statement {
        background-color: rgba(245, 245, 245, 0.7);
    }

    @media (max-width: 768px) {
        .hero {
            padding: 150px 0 80px;
        }
    }
</style>
