<style>
    .join-section {
        text-align: center;
        position: relative;
        background: linear-gradient(to bottom, var(--bg-primary) 0%, var(--bg-secondary) 100%);
        transition: background var(--transition-speed);
    }
    
    .join-content {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .join-content p {
        font-size: 1.2rem;
        margin-bottom: 40px;
        color: var(--text-secondary);
        transition: color var(--transition-speed);
    }
    
    .quote {
        font-style: italic;
        font-size: 1.4rem;
        color: var(--accent-2);
        border-left: 4px solid var(--accent-1);
        padding-left: 30px;
        margin: 60px auto;
        max-width: 700px;
        text-align: left;
        line-height: 1.6;
        transition: color var(--transition-speed);
    }
    
    .contact-info {
        background-color: var(--card-bg);
        padding: 35px;
        border-radius: 12px;
        margin-top: 50px;
        border: 1px solid var(--border-color);
        backdrop-filter: blur(5px);
        transition: all var(--transition-speed);
    }
    
    .contact-info h3 {
        color: var(--primary-color);
        margin-bottom: 20px;
        font-size: 1.4rem;
        font-weight: 600;
        transition: color var(--transition-speed);
    }

    .contact-item {
        margin-bottom: 15px; 
        font-size: 1.1rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .contact-item i {
        color: var(--accent-1);
        margin-right: 10px;
    }
</style>
