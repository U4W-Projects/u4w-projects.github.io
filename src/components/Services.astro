<section id="services" class="services-section">
    <div class="container">
        <h2 class="section-title">OUR DOMAINS</h2>
        <div class="services-grid">
            <div class="service">
                <div class="project-image">
                    <img
                        src="/images/floodcam_ii.png"
                        alt="FloodCAM-II Dashboard"
                        loading="lazy"
                    />
                </div>
                <h3>FloodCAM-II</h3>
                <p>
                    A comprehensive platform for weather, disaster, wind, and
                    wave monitoring, offering early warnings to mitigate risks.
                </p>
            </div>
            <div class="service">
                <div class="project-image">
                    <img
                        src="/images/nereidro.png"
                        alt="Nereidro Interface"
                        loading="lazy"
                    />
                </div>
                <h3>Nereidro</h3>
                <p>
                    Hydrological basin modeling and simulation application
                    integrating traditional hydrology with advanced machine
                    learning.
                </p>
            </div>
            <div class="service">
                <div class="project-image">
                    <img
                        src="/images/smartwm.png"
                        alt="SmartWM Dashboard"
                        loading="lazy"
                    />
                </div>
                <h3>SmartWM</h3>
                <p>
                    Intelligent water meter management system for modern utility
                    monitoring.
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    .services-section {
        background-color: rgba(15, 23, 42, 0.8);
        position: relative;
        border-top: 1px solid var(--border-color);
        border-bottom: 1px solid var(--border-color);
        transition: all var(--transition-speed);
        padding: 5rem 0;
    }

    :global(.light-mode) .services-section {
        background-color: rgba(245, 245, 245, 0.8);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        position: relative;
        z-index: 1;
    }

    .service {
        text-align: left;
        border-radius: 12px;
        background-color: var(--card-bg);
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
        backdrop-filter: blur(5px);
        position: relative;
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .service:hover {
        transform: translateY(-8px);
        box-shadow: 0 15px 30px var(--shadow-color);
        border-color: rgba(16, 185, 129, 0.4);
    }

    .project-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .project-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .service:hover .project-image img {
        transform: scale(1.05);
    }

    .service h3 {
        font-size: 1.5rem;
        color: var(--text-primary);
        margin: 20px 20px 10px;
        font-weight: 700;
        transition: color var(--transition-speed);
    }

    .service p {
        color: var(--text-secondary);
        font-size: 1rem;
        line-height: 1.6;
        margin: 0 20px 25px;
        transition: color var(--transition-speed);
        flex-grow: 1;
    }

    @media (max-width: 1200px) {
        .services-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .services-grid {
            grid-template-columns: 1fr;
        }

        .project-image {
            height: 220px;
        }
    }
</style>
