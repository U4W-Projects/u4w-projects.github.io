---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section id="about" class="about-section">
    <div class="container">
        <h2 class="section-title">{t("about.title")}</h2>
        <div class="about-content">
            <div class="about-text">
                <h3>{t("about.team")}</h3>
                <p>
                    {t("about.desc1")}
                </p>
                <p>
                    {t("about.desc2")}
                </p>
            </div>
            <div class="about-features">
                <div class="feature">
                    <i class="fas fa-microchip"></i>
                    <h4>{t("about.role1")}</h4>
                    <p>{t("about.role1.desc")}</p>
                </div>
                <div class="feature">
                    <i class="fas fa-code"></i>
                    <h4>{t("about.role2")}</h4>
                    <p>{t("about.role2.desc")}</p>
                </div>
                <div class="feature">
                    <i class="fas fa-flask"></i>
                    <h4>{t("about.role3")}</h4>
                    <p>{t("about.role3.desc")}</p>
                </div>
                <div class="feature">
                    <i class="fas fa-cloud"></i>
                    <h4>{t("about.role4")}</h4>
                    <p>{t("about.role4.desc")}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .about-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 60px;
        align-items: start;
    }

    .about-text h3 {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin-bottom: 20px;
        font-weight: 600;
        transition: color var(--transition-speed);
    }

    .about-text p {
        color: var(--text-secondary);
        font-size: 1.05rem;
        margin-bottom: 25px;
        line-height: 1.7;
        transition: color var(--transition-speed);
    }

    .about-features {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }

    .feature {
        background-color: var(--card-bg);
        padding: 25px;
        border-radius: 10px;
        transition: all 0.3s;
        border: 1px solid var(--border-color);
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(5px);
    }

    .feature:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px var(--shadow-color);
        border-color: rgba(59, 130, 246, 0.3);
    }

    .feature::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 100%;
        background-color: var(--primary-color);
    }

    .feature i {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin-bottom: 15px;
    }

    .feature h4 {
        font-size: 1.2rem;
        color: var(--text-primary);
        margin-bottom: 10px;
        font-weight: 600;
        transition: color var(--transition-speed);
    }

    .feature p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        line-height: 1.6;
        transition: color var(--transition-speed);
    }

    @media (max-width: 992px) {
        .about-content {
            grid-template-columns: 1fr;
            gap: 40px;
        }
    }

    @media (max-width: 768px) {
        .about-features {
            grid-template-columns: 1fr;
        }
    }
</style>
