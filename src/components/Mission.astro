---
import { useTranslations } from "../i18n/utils";

const { lang } = Astro.props;
const t = useTranslations(lang);

const p1 = t("mission.p1.text").replace(
    "{strong}",
    `<strong>${t("mission.p1.strong")}</strong>`,
);
const p2 = t("mission.p2.text").replace(
    "{em}",
    `<em>${t("mission.p2.em")}</em>`,
);
const p3 = t("mission.p3.text").replace(
    "{strong}",
    `<strong>${t("mission.p3.strong")}</strong>`,
);
---

<section id="mission" class="mission-section">
    <div class="container">
        <h2 class="section-title">{t("mission.title")}</h2>
        <p class="mission-text" set:html={p1} />
        <p class="mission-text" set:html={p2} />
        <p class="mission-text" set:html={p3} />
    </div>
</section>

<style>
    .mission-section {
        text-align: center;
        position: relative;
    }

    .mission-text {
        font-size: 1.2rem;
        max-width: 800px;
        margin: 0 auto 40px;
        line-height: 1.8;
        color: var(--text-secondary);
        position: relative;
        transition: color var(--transition-speed);
    }

    .mission-text strong {
        color: var(--primary-color);
        font-weight: 600;
    }

    .mission-text em {
        color: var(--accent-1);
        font-style: normal;
        font-weight: 600;
    }
</style>
